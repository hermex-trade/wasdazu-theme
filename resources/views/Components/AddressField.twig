<script type="x/template" id="vue-address-field">
    <div class="input-unit" data-validate="text" data-model="fullAddress">
        <input type="text" name="fullAddress" v-model="fullAddress" autocomplete="street-address" :id="'fullAddress' + _uid" @input="emitAddressEvent('fullAddress', $event.target.value)">
        <label :for="'fullAddress' + _uid">{{ trans("Ceres::Template.addressStreet") }}*</label>
    </div>
</script>

<script>
    Vue.component("address-field", {
        template: "#vue-address-field",
        delimiters: ["${", "}"],
        data: function() {
            return {
                fullAddress: ""
            }
        },
        computed: {
            address1() {
                return this.fullAddress.split(" ")[0]
            },
            address2() {
                // Check if fullAddress already has content
                // and and contains a whitespace
                if (this.fullAddress && this.fullAddress.indexOf(' ') > -1) {
                    return this.fullAddress.split(" ")[1]
                }
                return ""
            }
        },
        methods: {
            emitAddressEvent() {
                this.$emit("input", {field: "address1", value: this.address1});
                this.$emit("input", {field: "address2", value: this.address2});
            },
        }
    })
</script>