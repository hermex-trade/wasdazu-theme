<script type="x/template" id="vue-address-field">
    <div class="col-12">
        <div class="row">
            <div class="col-12 col-sm-12">
                <div class="input-unit" data-validate="text">
                    <input type="text" name="fullAddress" autocomplete="full-address-line" :id="'fullAddress' + _uid" :value="value.fullAddress" @input="emitAddressEvent('fullAddress', $event.target.value)">
                    <label :for="'txtStreet' + _uid">{{ trans("Ceres::Template.addressStreet") }}*</label>
                </div>
            </div>
        </div>
    </div>
</script>

<script>
    Vue.component("address-field", {
        template: "#vue-address-field",
        delimiters: ["${", "}"],
        data: function() {
            return {
                fullAddress: ""
            }
        },
        computed: {
            address1() {
                return this.fullAddress.split(" ")[0]
            },
            address2() {
                return this.fullAddress.split(" ")[1]
            }
        },
        methods: {
            emitAddressEvent(value) {
                this.$emit("input", {field: "address1", value: this.address1});
                this.$emit("input", {field: "address2", value: this.address2});
            },
        }
    })
</script>